@model Statistics
@{
    ViewData["Title"] = "Feedback Page";
}

<h1 class="ms-4">Order Feedback</h1>

<div class="container mt-4">
    <form asp-action="SubmitFeedback" method="post">
        <div class="form-group">
            <label>Total Price: $@Model.TotalPrice</label>
            <input type="hidden" asp-for="TotalPrice" />
        </div>
        <div class="form-group">
            <label asp-for="Feedback"></label>
            <textarea asp-for="Feedback" class="form-control"></textarea>
            <span asp-validation-for="Feedback" class="text-danger"></span>
        </div>
        <input type="hidden" asp-for="OrderID" />
        <button type="submit" class="btn btn-primary">Submit Feedback</button>
    </form>
</div>
