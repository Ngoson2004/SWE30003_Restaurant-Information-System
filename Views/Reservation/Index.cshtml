@model IEnumerable<Reserv>

@{
    ViewData["Title"] = "Index";
}

@if (TempData["success"] != null)
{
    <div class="container">
    <h3 style="color:green">@TempData["success"]</h3>
</div>
}

@if (TempData["remove"] != null)
{
    <div class="container">
    <h3 style="color:red">@TempData["remove"]</h3>
</div>
}

<div class="container mt-4">
    <h1>Reservations</h1>

    <div class="row pt-3 pb-3">
        <div class="col-6" text-end>
            <a asp-controller="Reservation" asp-action="CreateReserv" class="btn btn-primary">
                Add Reservation
            </a>

        </div>
    </div>
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Reservation ID
                </th>
                <th>
                    Customer Name
                </th>
                <th>
                    Time
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="20%">@obj.ReservId</td>
                    <td width="20%">@obj.CustomerName</td>
                    <td width="20%">
                        @obj.Time

                    </td>
                    <td>
                        <div>
                            <a asp-controller="Reservation" asp-action="Delete" asp-route-id="@obj.ReservId"
                                class="btn btn-primary mx-2">Delete</a>
                        </div>
                    </td>

                </tr>
            }

        </tbody>

    </table>
</div>
